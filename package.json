{
  "name": "playwright-api-framework",
  "version": "1.0.0",
  "description": "Playwright TypeScript API Automation Framework for Multi-Pod Architecture",
  "scripts": {
    "test": "playwright test",
    "test:los": "playwright test tests/los",
    "test:lms": "playwright test tests/lms",
    "test:unit": "playwright test tests/unit",
    "test:properties": "playwright test tests/properties",
    "test:login": "playwright test --grep @LoginTests",
    "test:framework": "playwright test --grep @FrameworkCheckTests",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "report": "playwright show-report",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "allure:serve": "allure serve allure-results",
    "test:allure": "npm run test && npm run allure:generate && npm run allure:open",
    "clean": "rm -rf test-results allure-results allure-report logs dist"
  },
  "keywords": [
    "playwright",
    "api",
    "automation",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/log4js": "^0.0.33",
    "@types/node": "^20.10.0",
    "allure-commandline": "^2.36.0",
    "allure-playwright": "^3.4.5",
    "fast-check": "^3.15.0",
    "log4js": "^6.9.1",
    "typescript": "^5.3.0"
  }
}
